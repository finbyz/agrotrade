n            <td class=\" onright\">\r\n                <p align=\"right\" class=\"text-size\">\r\n                    <strong>{{ doc.get_formatted(\"total\") }}</strong>\r\n                </p>\r\n            </td>\r\n        </tr>\r\n        {% if doc.additional_discount_percentage > 0 %}\r\n        <tr style=\"height: 10px\">\r\n            <td class=\"onright onleft ontop\" colspan=\"4\"><p align=\"right\" class=\"text-size\">Additional Discount</p></td>\r\n            <td class=\"onright onleft ontop\"><p align=\"right\" class=\"text-size\">{{ doc.additional_discount_percentage }} %</p></td>\r\n            <td class=\"onright onleft ontop\"><p align=\"right\" class=\"text-size\">{{ doc.get_formatted(\"discount_amount\")}}</p></td>\r\n        </tr>\r\n        {% endif %}\r\n    </tbody>\r\n</table>\r\n <table border=\"0\" cellspacing=\"0\" cellpadding=\"0\" width=\"100%\" class=\"tbspace\">\r\n    <tbody>  \r\n   \r\n        <tr>\r\n            <td  width=\"52%\"class=\"ontop onleftright\">\r\n                <p class=\"text-size\">\r\n                    Amount Chargeable (In Words)\r\n                </p>\r\n                <p class=\"text-size\">\r\n                    <strong>\r\n                       {{ frappe.utils.money_in_words(doc.rounded_total * -1 , doc.currency) }}\r\n                    </strong>\r\n                </p>\r\n            </td>\r\n            <td  class=\"onleftright ontop\" style=\"padding: 0!important\">\r\n                <table border=\"0\" cellspacing=\"0\" cellpadding=\"0\" width=\"100%\" class=\"tbspace\">\r\n                    <tbody>\r\n                        {% for row in doc.taxes %}\r\n                        <tr>\r\n                            <td width=\"80%\" align=\"left\">\r\n                                <p class=\"text-size\">\r\n                                    <strong>\r\n                                        {{ row.description }} \r\n                                    </strong>\r\n                       